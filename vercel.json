{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/execute-reservations",
      "schedule": "*/30 * * * * *"
    },
    {
      "path": "/api/cron/auto-feed",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/check-device",
      "schedule": "*/5 * * * *"
    }
  ]
}
